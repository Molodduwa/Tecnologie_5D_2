doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/style.css')
    title Ciao Mondo
  body
    header.header
      h1 #{title}
    article.container
      each macchina in mac
        div.person
          div.person-image(style=`background: url('${macchina.immagine}') top center no-repeat; background-size: cover;`)

          h2.person-name 
            | #{macchina.nome}
          a(href=`/profile?id=`) 
            | View Profile
